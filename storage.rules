rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Nur der Nutzer darf seine Videos/Bilder
    match /users/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    // Alles andere blockiert
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
